<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LiamKapelianis_PokemonBuilder.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LiamKapelianis_PokemonBuilder"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Team Builder"
            ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent
            Title="Team Analysis"
            ContentTemplate="{DataTemplate local:TeamAnalysisPage}" />

        <ShellContent
            Title="Compare"
            ContentTemplate="{DataTemplate local:PokemonComparePage}" />
    </TabBar>

</Shell>